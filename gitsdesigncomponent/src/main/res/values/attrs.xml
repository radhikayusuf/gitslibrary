<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GitsImageView">
        <attr name="scaleType" format="enum">
            <enum name="centerCrop" value="1"/>
            <enum name="center" value="2"/>
            <enum name="fit_center" value="3"/>
            <enum name="fit_xy" value="4"/>
        </attr>

        <attr name="imageUrl" format="string"/>
        <attr name="src" format="integer"/>
        <attr name="placeholder" format="integer"/>
        <attr name="error" format="integer"/>
        <attr name="loadingBackground" format="integer"/>
        <attr name="progressColor" format="integer"/>
    </declare-styleable>

    <declare-styleable name="GitsTextView">
        <attr name="fontFace" format="enum">
            <enum name="lato" value="1"/>
            <enum name="roboto" value="2"/>
            <enum name="montserrat" value="3"/>
            <enum name="avenir" value="4"/>
        </attr>

        <attr name="fontTextStyle" format="enum">
            <enum name="regular" value="0"/>
            <enum name="thin" value="1"/>
            <enum name="light" value="2"/>
            <enum name="italic" value="3"/>
            <enum name="bold" value="4"/>
            <enum name="heavy" value="5"/>
            <enum name="bold_italic" value="6"/>
            <enum name="heavy_italic" value="7"/>
            <enum name="thin_italic" value="8"/>
            <enum name="light_italic" value="9"/>
        </attr>

        <attr name="currencyType" format="enum">
            <enum name="none" value="1"/>
            <enum name="idr" value="2"/>
            <enum name="rp" value="3"/>
            <enum name="dollar" value="4"/>
            <enum name="euro" value="5"/>
        </attr>

    </declare-styleable>

    <declare-styleable name="GitsCalendarView">
        <attr name="calendarTitleTextColor" format="color"/>
        <attr name="dayOfWeekTextColor" format="color"/>
        <attr name="dayOfMonthTextColor" format="color"/>
        <attr name="calendarBackgroundColor" format="color"/>
        <attr name="disabledDayBackgroundColor" format="color"/>
        <attr name="disabledDayTextColor" format="color"/>
        <attr name="selectedDayBackgroundColor" format="color"/>
        <attr name="selectedDayTextColor" format="color"/>
        <attr name="weekLayoutBackgroundColor" format="color"/>
        <attr name="titleLayoutBackgroundColor" format="color"/>
        <attr name="currentDayOfMonthColor" format="color"/>
    </declare-styleable>
</resources>