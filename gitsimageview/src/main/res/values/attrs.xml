<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GitsImageView">
        <attr name="scaleType" format="enum">
            <enum name="centerCrop" value="1" />
            <enum name="center" value="2" />
            <enum name="fit_center" value="3" />
            <enum name="fit_xy" value="4" />
        </attr>

        <attr name="imageUrl" format="string"/>
        <attr name="src" format="integer"/>
        <attr name="placeholder" format="integer"/>
        <attr name="error" format="integer"/>
        <attr name="loadingBackground" format="integer"/>
        <attr name="progressColor" format="integer"/>
    </declare-styleable>
</resources>